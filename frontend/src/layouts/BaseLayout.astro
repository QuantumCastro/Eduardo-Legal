---
import "../styles/global.css";
import SeoHead from "../components/seo/SeoHead.astro";
import type { SeoPayload } from "../lib/seo";

const { lang = "es", seo } = Astro.props as { lang?: string; seo?: SeoPayload };
const fontsHref =
  "https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;600;700&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap";
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="light dark" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" href={fontsHref} as="style" />
    <link href={fontsHref} rel="stylesheet" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    {seo ? <SeoHead seo={seo} /> : null}
  </head>
  <body class="font-body antialiased">
    <slot />
  </body>
</html>
